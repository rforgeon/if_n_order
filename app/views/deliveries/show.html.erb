<%- model_class = Delivery -%>
<div class="page-header">
  <h1><%=t '.title', :default => Delivery %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:first_name) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.first_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_name) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.last_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address_line1) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.address_line1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address_line2) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.address_line2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:zip_code) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.zip_code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:state) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:country) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.country %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone_number) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.phone_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:amazon_email) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.amazon_email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:amazon_password) %></dt>
      <dd><pre class="prettyprint"><%= @delivery.amazon_password %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              deliveries_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_delivery_path(@delivery), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              delivery_path(@delivery),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

