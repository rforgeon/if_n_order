<%- model_class = Condition -%>
<div class="page-header">
  <h1><%=t '.title', :default => Condition %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @condition.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:item) %></dt>
      <dd><pre class="prettyprint"><%= @condition.item %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:key) %></dt>
      <dd><pre class="prettyprint"><%= @condition.key %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:order_count) %></dt>
      <dd><pre class="prettyprint"><%= @condition.order_count %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cur_count) %></dt>
      <dd><pre class="prettyprint"><%= @condition.cur_count %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              conditions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_condition_path(@condition), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              condition_path(@condition),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

